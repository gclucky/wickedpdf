<!-- Give ability to style output of pdf -->

<h1>Listing Posts</h1>

<table class="table table-condensed table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.name %></td>
        <td><%= post.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>
